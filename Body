import React, { useState } from 'react';
import { ChevronDown, Plus, X } from 'lucide-react';

const TypeCard = ({ title, description }) => (
  <div className="bg-white rounded-lg shadow-sm p-4 mb-4">
    <h3 className="text-lg font-semibold text-indigo-800 mb-2">{title}</h3>
    <div className="aspect-square w-full bg-gray-100 mb-2 rounded">
      {/* Placeholder for 200x200mm canvas */}
    </div>
    <p className="text-gray-600 text-sm">{description}</p>
  </div>
);

const ProjectCard = ({ title, content, reflection }) => {
  const [isContentVisible, setIsContentVisible] = useState(false);
  const [isReflectionVisible, setIsReflectionVisible] = useState(false);

  return (
    <div className="bg-white rounded-lg shadow-md p-6 mb-8">
      <div className="flex justify-between items-center mb-4">
        <h2 className="text-2xl font-bold text-indigo-800">{title}</h2>
        <button 
          onClick={() => setIsContentVisible(!isContentVisible)}
          className="text-indigo-600 hover:text-indigo-800 transition-colors"
          aria-label="Toggle content"
        >
          {isContentVisible ? <X size={24} /> : <ChevronDown size={24} />}
        </button>
      </div>
      
      {isContentVisible && (
        <div className="space-y-4 mb-4">
          {content}
          <div className="mt-6 border-t pt-4">
            <button
              onClick={() => setIsReflectionVisible(!isReflectionVisible)}
              className="flex items-center text-indigo-600 hover:text-indigo-800"
            >
              <Plus size={20} className="mr-2" />
              <span>What I Learned</span>
            </button>
            
            {isReflectionVisible && (
              <div className="mt-4 p-4 bg-indigo-50 rounded-lg">
                {reflection}
              </div>
            )}
          </div>
        </div>
      )}
    </div>
  );
};

